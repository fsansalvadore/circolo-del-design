<% content_for :meta_title, "Progetti Culturali — Circolo del Design" %>
<% content_for :meta_description, "Al fianco della programmazione, il Circolo del Design lavora per lo sviluppo di Progetti Speciali con l’ambizione di incidere concretamente su ambiti specifici." %>
<% content_for :meta_keywords, "Circolo Del Design, Circolo, Torino, Design, progetti speciali, istituzioni, aziende, professionisti" %>

<%= render 'shared/cultural-projects-header' %>
<main class="page-postheader">
  <div class="calendar-main-container w-container large">
    <div class="special-projects-container">
      <!-- filtri -->
      <div class="calendar-cards-container">
        <% if !@cultural_projects.empty? %>
        <!-- risultati -->
        <% @cultural_projects.each do |cultural_project| %>
          <%= link_to cultural_project_path(cultural_project), class: "event-card-container special-projects-card" do %>
          <% if cultural_project.cover && cultural_project.cover.present? %>
            <div class="event-card-img-container" style="background-image: url('<%= cl_image_path cultural_project.cover %>');"></div>
          <% else %>
            <div class="event-card-img-container"></div>
          <% end %>
            <div class="event-card-content-container">
              <h3 class="event-card-title"><%= cultural_project.title.truncate(100) %></h3>
              <% if cultural_project.start_date || !cultural_project.start_date.nil? %>
                <div class="">
                  <p><%= cultural_project.start_date %></p>
                </div>
              <% end %>
            </div>
          <% end %>
        <% end %>
        <% else %>
          <p class="result-message">Nessun progetto trovato.</p>
        <% end %>
      </div>
    </div>
  </div>
</main>

