<%= form_for @contact, url: contacts_path, remote: true do |f| %>
    <div class="col-md-6">
        <%= f.label :nome %></br>
        <%= f.text_field  :nome, required: true, class: "contact-form-text-area" %></br>

        <%= f.label :email %></br>
        <%= f.text_field :email, required: true, class: "contact-form-text-area" %></br>

      <%= f.label :messaggio %></br>
      <%= f.text_area :messaggio, rows: 8, cols: 40, required: true, class: "contact-form-text-area",
                        placeholder: "Scrivi un messaggio"%></br>

      <div class= "hidden">
        <%= f.label :nickname %>
        <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
      </div>

      <%= f.submit 'Invia Messaggio', class: 'btn btn-primary' %>
    </div>
  <% end %>
  <div class="col-md-6" id="flash-message">
    <%= render 'flash' %>
  </div>
