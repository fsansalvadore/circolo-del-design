<% content_for :meta_title, "Welcome to the Post-Analog Condition — What's On — Circolo del Design di Torino" %>
<% content_for :meta_description, "Ispirazioni e progetti per un nuovo tempo." %>
<% content_for :meta_keywords, "Circolo Del Design, Circolo, Torino, Design, Coronavirus, Covid-19, Welcome to the Post-Analog Condition" %>
<%# content_for :meta_image, "HomingCdD.jpg" %>
<div class="wpac_home">
  <header id="top" class="page-header-container wpac" style="background-image: linear-gradient(0deg, rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.3)), url('https://res.cloudinary.com/dueboq0he/image/upload/v1587398308/circolo-del-design/xyti7cq2w2i6leh06kvl.jpg'<%#= cl_image_path @wpac_home.cover %>);">
    <div class="w-container large">
      <h1 class="page-header-title"><%= @wpac.title %></h1>
      <div class="subheader"><%= @wpac.subtitle %></div>
    </div>
    <canvas id="canvas"></canvas>
  </header>
  <div class="wpac-home-container">
    <div class="wpac-visual-container" id="wpac_visual_container">
      <div class="upper-layer">
        <div class="front-column"></div>
        <div class="front-column"></div>
        <div class="front-column"></div>
      </div>
      <div class="lower-layer">
        <div class="wpac_circle y" id="circle">
          <div class="circle x"></div>
        </div>
      </div>
    </div>
    <div class="themes-container">
      <ul>
        <% unless @themes.empty? %>
          <% @themes.each do |theme| %>
            <li>
              <%= link_to articles_tag_path(theme.nome.downcase.gsub(" ", "-")) do %>
                <div class="theme_content_anim">
                  <div class="theme_content_text">
                    <h2>
                      <div class="theme_title_anim">
                        <div><%= theme.nome.upcase %></div>
                        <div><%= theme.nome.upcase %></div>
                      </div>
                      <span>
                        <svg width="27" height="19" viewBox="0 0 27 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" clip-rule="evenodd" d="M21.0141 8.25508L15.7593 3.00023L17.8806 0.878906L26.3709 9.36919L16.5098 18.9948L14.3884 16.8734L20.0068 11.2551H0V8.25508H21.0141Z" fill="white"/>
                        </svg>
                      </span>
                    </h2>
                    <div class="theme_content_abstract">
                      <%=raw theme.subtitle %>
                    </div>
                  </div>

                </div>
              <% end %>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="wpac_abstract_container bt_red">
    <div class="abstract">
      <div class="ab_column highlight">
        <%=raw @wpac.intro_paragraph %>
      </div>
    </div>
  </div>
  <%= render partial: "shared/wpac-media", locals: {title: false} %>
  <div class="wpac_abstract_container">
    <div class="abstract">
      <div class="ab_column">
        <%=raw @wpac.long_paragraph %>
      </div>
    </div>
  </div>
  <div class="wpac-home-outro">
    <%=raw @wpac.wpac_outro %>
  </div>
</div>
<%= render "shared/support-banner" %>
