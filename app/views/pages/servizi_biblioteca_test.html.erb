<% content_for :meta_title, "Biblioteca del Design — Servizi — Circolo del Design" %>
<% content_for :meta_keywords, "Circolo Del Design, Circolo, Torino, Design, biblioteca, cataloghi, libri, archivio, contemporaneo, divulgare" %>

<%= render 'shared/servizi-header' %>
<div class="page-postheader" id="main-content">
  <main class="event-article-container w-container large">
    <aside id="w-node-d2e76c0777b8-1ccbd48a" class="event-article-details">
      <div class="sticky">
        <div class="event-aside-line"></div>
        <% subMenu = [
          {title: "Affitta gli spazi", path: servizi_spazi_path, active: ""},
          {title: "Biblioteca del Design", path: servizi_biblioteca_path, active: "btn-active-yellow"}
        ]
          %>
        <% subMenu.each do |s| %>
          <%= render partial: 'shared/sub-link', locals: {item: s} %>
        <% end %>
      </div>
    </aside>
    <article class="event-article-content line big-content">
      <% unless @page.nil? || @page.content_blocks.empty? %>
        <% @page.content_blocks.order(:position).each do |block| %>
          <%= render partial: "shared/content/#{block.kind}", locals: {block: block} unless !block.is_visible %>
        <% end %>
      <% end %>
    </article>
  </main>
</div>

