<% content_for :meta_title, "#HomingCdD — What's On — Circolo del Design" %>
<% content_for :meta_description, "Interviste, video, rubriche e approfondimenti legati alla cultura del progetto." %>
<% content_for :meta_keywords, "Circolo Del Design, Circolo, Torino, Design, eventi, mostre, workshop, progetti, partner, programma, appuntamenti, mostre in corso, rubriche" %>
<% content_for :meta_image, "HomingCdD.jpg" %>

<header id="top" class="page-header-container blog">
  <div class="w-container large">
    <div class="breadcrumb-text"><%= link_to "Home", root_path %> / What's On /</div>
    <h1 class="page-header-title">#HomingCdD</h1>
    <div class="page-header-subtitle">Interviste, video, rubriche e approfondimenti legati alla cultura del progetto.</div>
  </div>
</header>
<main class="page-postheader blog">
  <div class="calendar-main-container w-container">
    <div class="blog_grid">
      <% if @blog_posts && !@blog_posts.empty? %>
        <% @blog_posts.each do |post| %>
          <%= link_to blog_post_path(post), class: "event-card-container" do %>
            <div class="cart_img_container">
              <div class="event-card-category-label"><%= post.rubrica unless post.rubrica.empty? %></div>
              <div class="event-card-img-container"
              style="background-image: url('<%= cl_image_path post.cover %>');">
              </div>
            </div>
            <div class="event-card-content-container">
              <h3 class="event-card-title"><%= post.title.truncate(100) %></h3>
              <p class="event-card-subtitle"><%=raw post.subtitle.truncate(200) %></p>
            </div>
          <% end %>
        <% end %>
      <% else %>
        </p>Non ci sono post al momento.<p>
      <% end %>
    </div>
  </div>
</main>
