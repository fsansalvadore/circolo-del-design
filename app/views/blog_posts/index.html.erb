<% content_for :meta_title, "Programma — What's On — Circolo del Design" %>
<% content_for :meta_description, "I prossimi appuntamenti al Circolo del Design." %>
<% content_for :meta_keywords, "Circolo Del Design, Circolo, Torino, Design, eventi, mostre, workshop, progetti, partner, programma, appuntamenti, mostre in corso" %>

<header id="top" class="page-header-container blog">
  <div class="w-container large">
    <div class="breadcrumb-text"><%= link_to "Home", root_path %> / What's On /</div>
    <h1 class="page-header-title">#HomingCdD</h1>
    <div class="page-header-subtitle">Interviste, video, rubriche e approfondimenti legati alla cultura del progetto.</div>
  </div>
</header>
<% rubriche = [
    {nome: "WPAC: Welcome to the post-analog condition"},
    {nome: "Ottagono: from 60s to 80s"},
    {nome: "CdDiary Special"},
    {nome: "Urca Urca Tirulero"},
    {nome: "Clip Tips"},
    {nome: "Home is..."}
  ] %>
<div class="blog_nav_container">
  <a href="#" id="blog_nav_btn" class="blog_nav_btn">
    <span></span>
  </a>
  <nav id="blog_nav_links" class="w-container large">
    <%#= link_to "Tutte le rubriche", whats_on_HomingCdD_path %>
    <% rubriche.each do |item| %>
      <%= link_to item[:nome], whats_on_HomingCdD_path %>
    <% end %>
  </nav>
  <nav id="blog_nav_links_ghost">
    <%#= link_to "Tutte le rubriche", whats_on_HomingCdD_path %>
    <% rubriche.each do |item| %>
      <%= link_to item[:nome], whats_on_HomingCdD_path %>
    <% end %>
  </nav>
</div>
<main class="page-postheader blog">
  <div class="calendar-main-container w-container">
    <div class="blog_grid">
      <% if @blog_posts && !@blog_posts.empty? %>
        <% @blog_posts.each do |post| %>
          <%= link_to blog_post_path(post), class: "event-card-container" do %>
            <div class="event-card-category-label">Ottagono: from 60s to 80s</div>
            <div class="event-card-img-container" style="background-image: url('<%= cl_image_path post.cover %>');">
            </div>
            <div class="event-card-content-container">
              <h3 class="event-card-title"><%= post.title.truncate(100) %></h3>
              <p class="event-card-subtitle"><%= post.subtitle.truncate(140) %></p>
            </div>
          <% end %>
        <% end %>
      <% else %>
        </p>Non ci sono post al momento.<p>
      <% end %>
    </div>
  </div>
</main>
